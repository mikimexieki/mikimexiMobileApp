<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calderon.mikimexiapp">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.RepartidorActivity"
            android:label="@string/title_activity_repartidor"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.LoginRepartidor" />
        <activity
            android:name=".activities.VendedoresActivity"
            android:label="@string/title_activity_vendedores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.LoginVendedor" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ClientesActivity"
            android:label="@string/title_activity_clientes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LoginCliente"
            android:label="@string/title_activity_login_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>